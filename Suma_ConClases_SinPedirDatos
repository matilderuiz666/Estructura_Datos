Operaciones.h

#pragma once

using namespace std;

class Operaciones
{
private:
	float a;
	float b;
	float suma;
public:
	//esto es m√©todos
	Operaciones(); 
	void calcularsuma();
};

Operaciones.cpp

#include "Operaciones.h"
#include <iostream>

using namespace std;

Operaciones::Operaciones() {
	a = 4;
	b = 5.3;
}
void Operaciones::calcularsuma() {
	suma = a + b;
	cout << "La suma es: " << suma;
}
